<%- include("../header") -%>
    <% if (locals.messages) { %>
        <script language="javascript">
            if ("<%= messages.msg %>" !== '') {
                alert("<%= messages.msg %>");
            }
        </script>
        <% } %>
            <div class="text-center center-div" id="login">
                <div class="container w-25 mt-4 border py-5">
                    <div class="title pb-5">
                        <h2 class="font-weight-bold">Register System</h2>
                        <span>Register New User</span>
                    </div>
                    <form action="/register" method="POST"><br>
                        <div class="form-group">
                            <input type="name" class="form-control" placeholder="userName" id="userName" name="userName" required />
                        </div>
                        <br>
                        <div class="form-group">
                            <input type="email" class="form-control" placeholder="email" id="email" name="email" required />
                        </div>
                        <br>
                        <div class="form-group">
                            <input type="password" class="form-control" placeholder="password" id="password" name="password" />
                        </div>
                        <br>
                        <button type="submit" class="btn btn-success rounded-pill">Sign Up</button>
                        <br>
                        <br>
                        <a href="/login" class="btn btn-warning rounded-pill">already Register?</a>
                    </form>
                </div>
            </div>
            <%- include("../footer") -%>