<%- include("../header") -%>
    <% if (locals.messages) { %>
        <script language="javascript">
            if ("<%= messages.msg %>" !== '') {
                alert("<%= messages.msg %>");
            }
        </script>
        <% } %>
            <%- include("../navbar") -%>
                <div class="container">
                    <h2 class="mb-5 mt-3">My Orders</h2>
                    <div class="table-responsive">
                        <div class="table-wrapper">

                            <% if (orders.length> 0) { %>
                                <table class="table table-striped table-hover">
                                    <thead>
                                        <tr>
                                            <th>OrderID</th>
                                            <th>Customer</th>
                                            <th>Location</th>
                                            <th>Order Date</th>
                                            <th>Status</th>
                                            <th>Net Amount</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% orders.forEach(function(order) { %>
                                            <tr>
                                                <td>
                                                    <a href="/trackorder/<%=order.id%>">
                                                        <%=order.id%>
                                                    </a>
                                                </td>
                                                <td>
                                                    <a href="#"><img src="https://bootdey.com/img/Content/avatar/avatar6.png" style="height: 20px;width: 20px;" class="avatar" alt="Avatar"> Michael Holz</a>
                                                </td>
                                                <td>
                                                    <%= order.address.address1%>
                                                </td>
                                                <td>
                                                    <%= order.createdAt%>
                                                </td>
                                                <td><span class="status text-success"></span>
                                                    <%= order.status%>
                                                </td>
                                                <td>Rs.
                                                    <%= order.amount%>
                                                </td>
                                                <td><a href="#" class="view" title="" data-toggle="tooltip" data-original-title="View Details"><i class="material-icons">î—ˆ</i></a></td>
                                            </tr>
                                            <% }); %>
                                    </tbody>
                                </table>
                                <%} else{ %>
                                    <div class="d-flex flex-row justify-content-between align-items-center p-2 bg-white mt-4 px-3 rounded ">
                                        <h2>you don't have any order yet.</h2>
                                    </div>
                                    <% }%>
                        </div>
                    </div>
                </div>
                <%- include("../footer") -%>